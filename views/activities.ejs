    <!-- adding activities end -->

    <!-- activities begin -->
    <% activities.reverse().forEach((activity) => { %>
      <a href="/ActivityAbout?<%= activity.activityId %>">
        <div class="card-container big">
          <div class="trainer-profile">
            <h2><%= activity.activityName %></h2>
  
            <div class="description">
              <%= activity.description %>
            </div>
            <div class="post-img" style="background-image: url('<%= activity.url %>');">
            </div>
            <div class="location-text">
              <i class="fa-solid fa-location-dot"></i>
              <p><%= activity.location %></p>
            </div>
            <div class="reviews location-text">
              <i class="fa-solid fa-star"></i>
              <p>Avarage rating : <%= activity.rating %>(<%= activity.reviews %>)</p>
            </div>
            <div class="reviews flex">
              <h3 class="average-rating"><%= activity.rating %></h3>
              <div class="starDiv">
                <span class="fa fa-star 1"></span>
                <span class="fa fa-star 2"></span>
                <span class="fa fa-star 3"></span>
                <span class="fa fa-star 4"></span>
                <span class="fa fa-star 5"></span>
              </div>
              <h3>(<%= activity.reviews %>)</h3>
            </div>
            <div class="shared-by">
              <div class="user-pic" style="background-image: url('<%= activity.authorImg %>');"></div>
              <p class="grey-text">Shared by - <%= activity.authorName %> </br> <%= activity.time %></p> 
            </div>
          </div>
        </div>
      </a>
      <% })%>

    <!-- adding activities finish -->

    <div class="post-my-activity flex">
