<link rel="stylesheet" href="/static/stylesheets/feed-style.css" />
<!-- <link rel="stylesheet" href="/static/stylesheets/activities.css" /> -->
<title>Post activity</title>

<div class="background-container">
  <div class="feed-container">
    <div class="navbar-container">
      <div class="navbar">
        <div class="img-cont logo"></div>
        <a class="nav" href="/trainers">Trainers</a>
        <a class="nav" href="/activities">Activities</a>
        <% if(!user){ %>
        <a href="/dashboard">
          <img
            class="profile-pic"
            src="/static/img-activity/user-profile-img.jpg"
            alt=""
          />
        </a>
        <% }else{ %>
          <a href="/profile">
          <div class="shared-by">
            <div
              class="profile-pic"
              style="background-image: url('<%= user.profile.url %>')"
            ></div>
          </div>
          <!-- <img class="profile-pic" src="<%= user.profile.url %>" alt="" /> -->
        </a>
        <% } %>
      </div>
    </div>

    <!-- NAVBAR FINISH -->

    <hr class="orange-line" />
    <div class="form-container">
      <h1>Post your ideaa</h1>
      <!-- <<%- include ('./partials/messages') %> -->
      <form
        action="/posts/newActivity"
        enctype="multipart/form-data"
        method="post"
      >
        <p>Title</p>
        <input class="input" type="text" name="name" />

        <label for="bio">Description</label>
        <textarea
          class="input"
          id="description"
          type="text"
          name="description"
          placeholder="Tell us more about the activity..."
        ></textarea>

        <p>Location</p>
        <input class="input" type="text" name="location" />
        <label for="image" class="custom-file-upload"
          >Upload picture here <i class="fa-solid fa-file-arrow-down"></i
        ></label>
        <input id="img" type="file" name="image" />
        <div class="btn-cont">
          <button type="submit" class="btn orange">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
