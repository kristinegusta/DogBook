<title>Trainers</title>
<link rel="stylesheet" href="/static/stylesheets/activities.css" />
<div class="background-container">
  <div class="feed-container">
<div class="main-container">
  <div class="header flex">
    <img src="/static/img-trainer/logo.png" alt="" />
    <a class="nav page-now" href="/trainers">Trainers</a>
    <a class="nav" href="/activities">Activities</a>
    <img src="/static/img-trainer/user-profile-img.jpg" alt="" />
  </div>
  <hr class="orange-line" />
  <div class="training-type flex">
    <div class="training-img">
      <img src="/static/img-trainer/obedience.png" alt="" />
      <p>Obedience</p>
    </div>
    <div class="training-img">
      <img src="/static/img-trainer/protection.png" alt="" />
      <p>Protection</p>
    </div>
    <div class="training-img">
      <img src="/static/img-trainer/hoops.png" alt="" />
      <p>Hoops</p>
    </div>
    <div class="training-img">
      <img src="/static/img-trainer/others.png" alt="" />
      <p>Others</p>
    </div>
  </div>
  <div class="search-bar-div">
    <input type="text" class="search-bar" placeholder="Search for a trainer" />
  </div>
  <hr class="orange-line" />
  <div class="card-container">
    
    <% trainers.reverse().forEach((trainer) => { %>
  <div class="trainer-profile">
   
    <div class="trainer-infos flex">
      <div class="trainer-pic"></div>
      <div class="infos">
        <h4><%= trainer.trainerName %></h4>
        <div class="trainer-category flex">
          
          <p class="grey-text">Obedience</p>
        </div>
        <div class="location flex">
          <p >Bruxelles</p>
        </div>
      </div>
    </div>
    <div class="activity-description">
      <%= trainer.bio %>
    </div>
    <div class="dog-pic">
      <img src="/static/img-trainer/puppy.jpg" alt="" class="dog-pic" />
    </div>
    <div class="reviews flex">
      <h2 class="average-rating">4.6</h2>
      <img src="/static/img-trainer/star.png" alt="" class="star" />
      <img src="/static/img-trainer/star.png" alt="" class="star" />
      <img src="/static/img-trainer/star.png" alt="" class="star" />
      <img src="/static/img-trainer/star.png" alt="" class="star" />
      <img src="/static/img-trainer/star.png" alt="" class="star" />
    </div>
  </div>
  <% })%>

  <!-- adding trainers end -->
</div>
</div>
</div>
</div